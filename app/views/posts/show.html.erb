<% @page_title = @post.title %>
<%= render @post %>

<div id="comments">
	<% comments = @post.comments.reject(&:new_record?); unless comments.empty? %>
	  <h2>Comments</h2>

	  <%= render @post.comments.reject(&:new_record?) %>
	<% end %>

  <% if @post.comments_allowed? %>
    <h2>Add a comment</h2>

    <%= render :partial => 'comments/form' %>
  <% else %>
  <h2>Comments are closed</h2>

  <p>Comments are automatically closed 2 weeks after publication. If you still have something to say about the article, feel free to <%= link_to 'contact me', about_path %>.</p>
  <% end %>
</div>

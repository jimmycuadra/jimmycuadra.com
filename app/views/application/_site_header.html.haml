%header.site-header
  .bucket
    %a.title-link{ href: "/", title: "Jimmy Cuadra" }
      %img.logo{ src: "/assets/logo.png", width: "75", height: "75", alt: "Jimmy Cuadra" }
      %hgroup
        %h1.main-title
          I'm <span>Jimmy Cuadra</span>.
        I write about <span>web development</span>, <span>programming</span> and <span>open source software</span>.
      .clear

%nav
  .bucket
    %ul
      %li= nav_for "Writing", root_path, title: "Writing"
      %li= nav_for "by tags", tags_path, class: "sub-nav", title: "Writing by tags"
      %li= nav_for "About", about_path, title: "About Jimmy Cuadra"
      %li= nav_for "Projects", projects_path, title: "Projects"
      - if admin?
        %li= nav_for "[ New post ]", new_post_path, title: "Create a new post"

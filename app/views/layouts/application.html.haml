!!! 5
%html
  %head
    %title
      = "#{@page_title} | " if @page_title.present?
      = "Page #{params[:page]} | " if params[:page]
      Jimmy Cuadra
    = stylesheet_link_tag "application"
    = csrf_meta_tags
    %link{ rel: "alternate", type: "application/rss+xml", title: "RSS", href: "http://feeds.feedburner.com/jimmycuadra" }
    = render "production_scripts" if Rails.env.production?
  %body
    = render "site_header"
    .content
      .bucket
        - if flash[:notice]
          %section#flash.notice
            = flash[:notice]
        = yield
    = render "site_footer"
    = javascript_include_tag "jquery.min" unless Rails.env.production?
    = javascript_include_tag "application"
    = render "social_scripts" if Rails.env.production? || params[:social]

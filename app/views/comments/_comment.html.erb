<section>
  <header>
    <span><%= comment.user.url.blank? ? comment.user.username : link_to(comment.user.username, comment.user.url) %> commented</span>
    <time pubdate datetime="<%= comment.created_at.strftime("%Y-%m-%d") %>"><%= comment.created_at.strftime("%B %d, %Y") %></time>
  </header>
  <section>
    <%= format_comment(comment.comment) %>
  </section>
</section>
